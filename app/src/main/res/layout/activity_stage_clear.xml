<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_stage_clear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ie.seankehoe.buddyfit.StageClear"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/stageup"
        android:id="@+id/imageView4"
        android:alpha=".7"
        android:scaleX="1.8"
        android:scaleY="1.8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:layout_alignBottom="@+id/btn_continue" />

    <TextView
        android:text="You've reached Stage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="149dp"
        android:id="@+id/textView2"
        android:textSize="18sp" />

    <Button
        android:text="Neat!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="158dp"
        android:id="@+id/btn_continue"
        android:onClick="gameContinue"/>

    <TextView
        android:text="Congratulations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:id="@+id/textView6"
        android:textSize="30sp" />

    <TextView
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stage_text"
        android:textSize="90sp"
        android:textStyle="normal|bold"
        android:textColor="#ffffffff"
        android:textColorHighlight="#ff000000"
        android:textScaleX="1.7"
        android:rotation="-8"
        android:layout_above="@+id/btn_continue"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="You've unlocked a new Style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/unlocktext"
        android:textStyle="normal|bold"
        android:textSize="26sp"
        android:textAlignment="center"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/hair1"
        android:id="@+id/imgunlock"
        android:visibility="invisible"
        android:layout_above="@+id/unlocktext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
