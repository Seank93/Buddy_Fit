<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ie.seankehoe.buddyfit.MainActivity"
    android:background="@drawable/grassbg">

    <Button
        android:text="@string/button_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_btn"
        android:onClick="goToProfile"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Unleash Power!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnStats"
        android:layout_below="@+id/profile_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/profile_btn"
        android:layout_alignEnd="@+id/profile_btn" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bftitle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnStats"
        android:layout_toEndOf="@+id/btnStats"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/btnStats" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/char_2"
        android:layout_alignTop="@+id/imageViewAlly"
        android:layout_toRightOf="@+id/imageViewAlly"
        android:layout_toEndOf="@+id/imageViewAlly"
        android:id="@+id/imageViewEnemy" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_below="@+id/imageViewEnemy"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/progressHP"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        android:rotationY="180" />

    <TextView
        android:text="maxHp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressHP"
        android:layout_toRightOf="@+id/hpNumber"
        android:layout_toEndOf="@+id/hpNumber"
        android:id="@+id/hpMax" />

    <TextView
        android:text="hp /"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hpNumber"
        android:layout_alignBaseline="@+id/hpMax"
        android:layout_alignBottom="@+id/hpMax"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/char_3"
        android:id="@+id/imageViewAlly"
        android:layout_marginBottom="89dp"
        android:rotationY="180"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Stage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textStyle="normal|bold"
        android:textSize="30sp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/imageView"
        android:layout_toLeftOf="@+id/imageViewEnemy"
        android:layout_toStartOf="@+id/imageViewEnemy" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/current_stage"
        android:text="999"
        android:textAppearance="@android:style/TextAppearance"
        android:textAlignment="viewStart"
        android:textStyle="normal|bold"
        android:paddingTop="0dp"
        android:textSize="30sp"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:paddingLeft="10dp" />

    <Button
        android:text="Deal 50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/deal50"
        android:onClick="deal50"/>

    <Button
        android:text="Deal 10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/deal50"
        android:layout_toLeftOf="@+id/deal50"
        android:layout_toStartOf="@+id/deal50"
        android:id="@+id/deal10"
        android:onClick="deal10"/>

    <Button
        android:text="Deal 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/deal10"
        android:layout_toLeftOf="@+id/deal10"
        android:layout_toStartOf="@+id/deal10"
        android:id="@+id/deal1"
        android:onClick="deal1"/>

</RelativeLayout>
